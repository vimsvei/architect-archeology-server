{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "pretty": true,
    "baseUrl": ".",
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
